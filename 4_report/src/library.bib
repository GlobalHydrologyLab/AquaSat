file = {:C$\backslash$:/Users/mrvr/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Tarolli, Sofia - 2016 - Human topographic signatures and derived geomorphic processes across landscapes.pdf:pdf},
isbn = {0169-555X},
