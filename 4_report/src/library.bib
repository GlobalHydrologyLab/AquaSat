issn = {0012-9658},
journal = {Ecology},
keywords = {16S,16S: analysis,16s rrna genes,Bacteria,Bacteria: genetics,Bacteria: growth {\&} development,Bacterial,Bacterial: analysis,Bacterial: chemistry,Bacterial: genetics,Biodiversity,Carbon,Carbon: metabolism,DNA,DNA Fingerprinting,Ecosystem,Environment,Hydrogen-Ion Concentration,New Hampshire,Nitrogen,Nitrogen: metabolism,Nonparametric,RNA,Ribosomal,Rivers,Rivers: chemistry,Rivers: microbiology,Statistics,Water Microbiology,Water Movements,bacteria,biogeography,hubbard brook,microbial,microbial diversity,new hampshire,ph,polymorphism,stream benthic organic matter,t-rflp,terminal-restriction fragment length,usa},
month = {sep},
