journal = {Journal of Geophysical Research: Earth Surface},
keywords = {http://dx.doi.org/10.1029/2009JF001600, doi:10.102},
number = {4},
pages = {1--15},
title = {{The importance of being coupled: Stable states and catastrophic shifts in tidal biomorphodynamics}},
volume = {115},
