doi = {10.2307/1353136},
file = {:C$\backslash$:/Users/mrvr/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Day et al. - 2000 - Pattern and Process of Land Loss in the Mississippi Delta A Spatial and Temporal Analysis of Wetland Habitat Change.pdf:pdf},
