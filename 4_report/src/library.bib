doi = {10.1016/j.rse.2008.07.003},
isbn = {0034-4257},
issn = {00344257},
journal = {Remote Sensing of Environment},
keywords = {Canopy chemistry,Canopy structure,Hyperspectral,Imaging spectroscopy,Partial least squares,Radiative transfer,Tropical forest},
number = {10},
pages = {3958--3970},
title = {{Spectral and chemical analysis of tropical forests: Scaling from leaf to canopy levels}},
