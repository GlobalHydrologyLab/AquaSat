isbn = {1540-9295},
issn = {15409295},
journal = {Frontiers in Ecology and the Environment},
number = {1},
pages = {48--58},
title = {{Riverine macrosystems ecology: Sensitivity, resistance, and resilience of whole river basins with human alterations}},
volume = {12},
year = {2014}
}
