issn = {15351459},
journal = {River Research and Applications},
keywords = {Eco-geomorphology,Flood pulse concept,Floodplains,Headwaters,Hierarchical patch dynamics,Hydrogeomorphic patches,Inshore retention concept,Large rivers,River continuum concept,Riverine productivity model},
number = {2},
