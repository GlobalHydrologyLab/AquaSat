doi = {10.1046/j.1365-2427.2002.00893.x},
file = {:C$\backslash$:/Users/mrvr/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Ward et al. - 2002 - Riverine landscape diversity.pdf:pdf},
