file = {:C$\backslash$:/Users/mrvr/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Meybeck et al. - 2003 - Global variability of daily total suspended solids and their fluxes in rivers.pdf:pdf},
isbn = {3314427514},
